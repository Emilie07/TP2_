# On choisi le nombre aléatoire
import random
chiffre_ordi = random.randint(0, 1000)

print(chiffre_ordi)

# Introduction du jeu
def introduction():
    print("J'ai choisi un nombre aléatoire entre 0 et 1000")
    print ("À vous de le deviner...")
introduction()
